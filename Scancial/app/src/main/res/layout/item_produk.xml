<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgProduk"
        android:background="@color/silver100"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:contentDescription="produk"
        android:src="@drawable/produk2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="10dp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Scancial For Woman"
            android:textStyle="bold"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/imgProduk" />

        <TextView
            android:id="@+id/tvPrize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rp120.000"

            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <TextView
            android:id="@+id/tvSeller"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2,4RBTerjual"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/imgProduk"
            app:layout_constraintTop_toBottomOf="@+id/tvPrize" />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="4.9"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tvPrize"
            app:layout_constraintTop_toBottomOf="@+id/tvPrize" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>